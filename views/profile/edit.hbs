 <div class="container-fluid">
           {{#each data}}

            <div class="row">
                <div class="col-md-10 content">
                    <div class="row">
                        <div class="col-md-11 profile-content">
                            <p class="display-4">Edit Profile</p>
                            <form class="" method="post">
                                <input type="text" name="user_id" value="{{this.id}}" hidden>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" value="{{this.fullname}}" name="name">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" value="{{this.mail}}" name="email">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Phone</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" value="{{this.phone}}" name="phone">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Address</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" value="{{this.adress}}" name="address">
                                    </div>
                                </div>
                              
                              
                                
                                
                                <hr>
                                <div>
                                    <button type="submit" class="btn btn-primary">Update</button>
                                    <br>
                                </div>
                                
                                       {{/each}}

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>